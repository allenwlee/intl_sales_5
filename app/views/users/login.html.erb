<div>
  <h1>Login</h1>
  <%= form_tag(sessions_path, :method => 'post') do %>
    <%= label_tag("user_usernam", "Username") %>
    <%= text_field_tag("user[username]") %>
    <%= label_tag("user_password", "Password") %>
    <%= password_field_tag("user[password]", 'Enter Password') %>
    <%= submit_tag("Log In") %>
  <% end %>
</div>
