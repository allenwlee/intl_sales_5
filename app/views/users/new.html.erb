<div>
  <h1>Sign up</h1>
  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, :placeholder => 'Enter Username' %>
    <%= f.label :email %>
    <%= f.text_field :email, :placeholder => 'Enter Email' %>
    <%= f.label :password %>
    <%= f.password_field :password, :placeholder => 'Create Password' %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :placeholder => 'Re-enter Password' %>
    <%= f.submit 'Create Account' %>
  <% end %>
</div>
