<div>
  <h1>Create a Project</h1>
  <%= form_for @project do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, :placeholder => 'Enter Title' %>
    <%= fields_for @genre do |g| %>
      <%= g.label :name %>
      <%= g.text_field :name, :placeholder => 'Enter Genres' %>
    <% end %>
    <%= f.label :budget_size %>
    <%= f.number_field :budget_size, :placeholder => 'Enter Budget' %>
    <%= f.label :description %>
    <%= f.text_area :description, :placeholder => 'Enter Description' %>
    <%= f.submit 'Create a Project' %>
  <% end %>
</div>
